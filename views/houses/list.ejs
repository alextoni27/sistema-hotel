<div class="card">
  <div class="flex items-center justify-between mb-4">
    <h2 class="text-lg font-medium">Casas</h2>
    <a href="/houses/new" class="bg-blue-600 text-white px-3 py-1 rounded">Nueva casa</a>
  </div>
  <div class="overflow-x-auto">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-3 py-2 text-left text-xs font-medium text-gray-500">ID</th>
          <th class="px-3 py-2 text-left text-xs font-medium text-gray-500">Nombre</th>
          <th class="px-3 py-2 text-left text-xs font-medium text-gray-500">Dirección</th>
          <th class="px-3 py-2 text-left text-xs font-medium text-gray-500">Ver</th>
          <th class="px-3 py-2 text-left text-xs font-medium text-gray-500">Acciones</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-100">
        <% houses.forEach(h => { %>
          <tr>
            <td class="px-3 py-2"><%= h.id %></td>
            <td class="px-3 py-2"><%= h.name %></td>
            <td class="px-3 py-2"><%= h.address %></td>
            <td class="px-3 py-2"><a class="text-blue-600" href="/houses/<%= h.id %>">Ver</a></td>
            <td class="px-3 py-2 flex gap-2">
              <a href="/houses/<%= h.id %>/edit" class="text-blue-600 hover:underline">Editar</a>
              <form action="/houses/<%= h.id %>?_method=DELETE" method="post" style="display:inline;">
                <button type="submit" class="text-red-600 hover:underline" onclick="return confirm('¿Seguro que deseas eliminar esta casa?')">Eliminar</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</div>
