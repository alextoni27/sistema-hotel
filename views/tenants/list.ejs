<%- include('../_layout_top') %>
<div class="card">
  <div class="flex items-center justify-between mb-4">
    <h2 class="text-lg font-medium">Inquilinos</h2>
    <a href="/tenants/new" class="bg-blue-600 text-white px-3 py-1 rounded">Nuevo inquilino</a>
  </div>
  <div class="overflow-x-auto">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-3 py-2 text-left text-xs font-medium text-gray-500">ID</th>
          <th class="px-3 py-2 text-left text-xs font-medium text-gray-500">Nombre</th>
          <th class="px-3 py-2 text-left text-xs font-medium text-gray-500">Tel√©fono</th>
          <th class="px-3 py-2 text-left text-xs font-medium text-gray-500">Email</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-100">
        <% tenants.forEach(t => { %>
          <tr>
            <td class="px-3 py-2"><%= t.id %></td>
            <td class="px-3 py-2"><%= t.full_name %></td>
            <td class="px-3 py-2"><%= t.phone %></td>
            <td class="px-3 py-2"><%= t.email %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</div>
    </div>
    <%- include('../_layout_bottom') %>
