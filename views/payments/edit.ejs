<%- include('../_layout_top') %>
<div class="max-w-lg mx-auto card">
  <h2 class="text-lg font-medium mb-4">Editar pago</h2>
  <form action="/payments/<%= payment.id %>?_method=PUT" method="post" class="space-y-3">
    <div>
      <label class="block text-sm text-gray-700">Inquilino</label>
      <input class="w-full border rounded px-3 py-2" name="tenant" type="text" value="<%= payment.tenant %>" required>
    </div>
    <div>
      <label class="block text-sm text-gray-700">Cuarto</label>
      <input class="w-full border rounded px-3 py-2" name="room_code" type="text" value="<%= payment.room_code %>" required>
    </div>
    <div>
      <label class="block text-sm text-gray-700">Periodo inicio</label>
      <input class="w-full border rounded px-3 py-2" name="period_start" type="date" value="<%= payment.period_start ? payment.period_start.toISOString ? payment.period_start.toISOString().slice(0,10) : payment.period_start : '' %>" required>
    </div>
    <div>
      <label class="block text-sm text-gray-700">Periodo fin</label>
      <input class="w-full border rounded px-3 py-2" name="period_end" type="date" value="<%= payment.period_end ? payment.period_end.toISOString ? payment.period_end.toISOString().slice(0,10) : payment.period_end : '' %>" required>
    </div>
    <div>
      <label class="block text-sm text-gray-700">Monto</label>
      <input class="w-full border rounded px-3 py-2" name="amount" type="number" step="0.01" value="<%= payment.amount %>" required>
    </div>
    <div>
      <label class="block text-sm text-gray-700">Estado</label>
      <select name="status" class="w-full border rounded px-3 py-2">
        <option value="pending" <%= payment.status === 'pending' ? 'selected' : '' %>>Pendiente</option>
        <option value="paid" <%= payment.status === 'paid' ? 'selected' : '' %>>Pagado</option>
      </select>
    </div>
    <div>
      <button class="bg-blue-600 text-white px-4 py-2 rounded" type="submit">Actualizar pago</button>
    </div>
  </form>
</div>
<%- include('../_layout_bottom') %>
