<%- include('../layout', { body: '' }) %>
<form action="/auth/login" method="post">
  <% if (typeof error !== 'undefined') { %>
    <p style="color:red"><%= error %></p>
  <% } %>
  <div class="max-w-md mx-auto card">
    <h2 class="text-lg font-medium mb-4">Iniciar sesión</h2>
    <form method="post" action="/auth/login" class="space-y-3">
      <div>
        <label class="block text-sm text-gray-700">Email</label>
        <input class="w-full border border-gray-200 rounded px-3 py-2" type="email" name="email" required>
      </div>
      <div>
        <label class="block text-sm text-gray-700">Contraseña</label>
        <input class="w-full border border-gray-200 rounded px-3 py-2" type="password" name="password" required>
      </div>
      <div>
        <button class="bg-blue-600 text-white px-4 py-2 rounded" type="submit">Entrar</button>
      </div>
    </form>
  </div>
</form>
