<%- include('layout', { body: '' }) %>
<% layout = undefined %>
<section class="card">
  <h2 class="text-lg font-medium mb-3">Ãšltimos cuartos</h2>
  <div class="overflow-x-auto">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-3 py-2 text-left text-xs font-medium text-gray-500">Casa</th>
          <th class="px-3 py-2 text-left text-xs font-medium text-gray-500">Piso</th>
          <th class="px-3 py-2 text-left text-xs font-medium text-gray-500">Cuarto</th>
          <th class="px-3 py-2 text-left text-xs font-medium text-gray-500">Tipo</th>
          <th class="px-3 py-2 text-left text-xs font-medium text-gray-500">Estado</th>
          <th class="px-3 py-2 text-left text-xs font-medium text-gray-500">Ver</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-100">
        <% rooms.forEach(r => { %>
          <tr>
            <td class="px-3 py-2"><%= r.house %></td>
            <td class="px-3 py-2"><%= r.floor %></td>
            <td class="px-3 py-2"><%= r.room_number %></td>
            <td class="px-3 py-2"><%= r.type %></td>
            <td class="px-3 py-2"><span class="text-sm text-gray-600"><%= r.status %></span></td>
            <td class="px-3 py-2"><a class="text-blue-600" href="/rooms/<%= r.id %>">Ver</a></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</section>
