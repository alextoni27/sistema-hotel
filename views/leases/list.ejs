<%- include('../_layout_top') %>
<div class="card">
  <div class="flex items-center justify-between mb-4">
    <h2 class="text-lg font-medium">Contratos</h2>
    <a href="/leases/new" class="bg-blue-600 text-white px-3 py-1 rounded flex items-center gap-2 btn-small">
      <svg class="w-4 h-4" aria-hidden="true"><use href="#icon-key" /></svg>
      Nuevo contrato
    </a>
  </div>
  <div class="overflow-x-auto">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-3 py-2 text-left text-xs font-medium text-gray-500">ID</th>
          <th class="px-3 py-2 text-left text-xs font-medium text-gray-500">Inquilino</th>
          <th class="px-3 py-2 text-left text-xs font-medium text-gray-500">Cuarto</th>
          <th class="px-3 py-2 text-left text-xs font-medium text-gray-500">Inicio</th>
          <th class="px-3 py-2 text-left text-xs font-medium text-gray-500">Fin</th>
          <th class="px-3 py-2 text-left text-xs font-medium text-gray-500">Precio</th>
          <th class="px-3 py-2 text-left text-xs font-medium text-gray-500">Estado</th>
          <th class="px-3 py-2 text-left text-xs font-medium text-gray-500">Acciones</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-100">
        <% leases.forEach(l => { %>
          <tr>
            <td class="px-3 py-2"><%= l.id %></td>
            <td class="px-3 py-2"><%= l.tenant_name %></td>
            <td class="px-3 py-2"><%= l.room_code %> / <%= l.house %></td>
            <td class="px-3 py-2"><%= l.start_date ? new Date(l.start_date).toLocaleDateString('es-PE', { year: 'numeric', month: 'short', day: '2-digit' }) : '-' %></td>
            <td class="px-3 py-2"><%= l.end_date ? new Date(l.end_date).toLocaleDateString('es-PE', { year: 'numeric', month: 'short', day: '2-digit' }) : '-' %></td>
            <td class="px-3 py-2"><%= l.monthly_price %></td>
            <td class="px-3 py-2"><span class="text-sm text-gray-600">
              <%= l.status === 'active' ? 'Activo'
                : l.status === 'terminated' ? 'Terminado'
                : l.status === 'pending' ? 'Pendiente'
                : l.status === 'cancelled' ? 'Cancelado'
                : l.status %>
            </span></td>
            <td class="px-3 py-2 flex gap-2">
              <a href="/leases/<%= l.id %>/edit" class="text-blue-600 hover:underline flex items-center gap-1 btn-small">
                <svg class="w-4 h-4" aria-hidden="true"><use href="#icon-edit" /></svg>
                Editar
              </a>
              <form action="/leases/<%= l.id %>?_method=DELETE" method="post" style="display:inline;">
                <button type="submit" class="text-red-600 hover:underline flex items-center gap-1 btn-small" onclick="return confirm('Â¿Seguro que deseas eliminar este contrato?')">
                  <svg class="w-4 h-4" aria-hidden="true"><use href="#icon-trash" /></svg>
                  Eliminar
                </button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</div>
</div>
<%- include('../_layout_bottom') %>
